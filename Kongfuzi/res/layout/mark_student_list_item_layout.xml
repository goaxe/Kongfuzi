<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/listview_item_bg"
    android:layout_width="match_parent"
    android:layout_height="176.0dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30.0dip"
        android:background="#D9DFE8"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="15.0dip"
            android:text="linghuijie"
            android:textColor="#57595B"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F3F4"
        android:orientation="vertical"
        android:paddingTop="10.0dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/score_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#57595B"
                android:textSize="14sp"
                android:layout_marginLeft="15.0dip"
                android:layout_marginBottom="3.0dip"
                android:text="总分：71.3" />

            <TextView
                android:id="@+id/rank_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginBottom="3.0dip"
                android:textColor="#57595B"
                android:textSize="14sp"
                android:text="总排名：1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80.0dip"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:textColor="#57595B"
                    android:textSize="14sp"
                    android:text="科目" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginTop="13.0dip"
                    android:textColor="#57595B"
                    android:text="成绩" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbarAlwaysDrawHorizontalTrack="false" >

                <LinearLayout
                    android:id="@+id/scrollview_linear_layout"
                    android:layout_marginLeft="10.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
