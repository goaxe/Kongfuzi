<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140.0dip"
        android:background="@drawable/query_bg_home_frame"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="0.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="50.0dip"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入大学名称/专业/培训机构"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/search_imageview"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="50.0dip"
                android:src="@drawable/search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_margin="10.0dip"
                android:src="@drawable/open_more_home_frame" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开更多" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xuan_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:background="@color/light_grey5"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/score_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="估分选大学" />

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_margin="10.0dip"
                android:src="@drawable/open_more_home_frame" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:src="@drawable/line" />

        <LinearLayout
            android:id="@+id/subject_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="专业选大学" />

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_margin="10.0dip"
                android:src="@drawable/open_more_home_frame" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:src="@drawable/line" />

        <LinearLayout
            android:id="@+id/province_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="招生省份" />

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_margin="10.0dip"
                android:src="@drawable/open_more_home_frame" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/kecheng_imageview"
                android:layout_width="wrap_content"
                android:layout_height="70.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/mycourse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的课程" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/daxue_imageview"
                android:layout_width="wrap_content"
                android:layout_height="70.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/myuniversity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的大学" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/guanzhu_imageview"
                android:layout_width="wrap_content"
                android:layout_height="70.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/myfollow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/jiaowu_imageview"
                android:layout_width="wrap_content"
                android:layout_height="70.0dip"
                android:layout_marginBottom="4.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:scaleType="fitCenter"
                android:src="@drawable/cloudorg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="云教务" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zuoping_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:background="@color/light_grey5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10.0dip"
            android:gravity="center_horizontal"
            android:paddingBottom="10.0dip"
            android:text="涂腾一方与我有两个相同支援，他的最新作品" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/zuoping1_imageview"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/zuoping1" />

            <ImageView
                android:id="@+id/zuoping2_imageview"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/zuoping2" />
        </LinearLayout>

        <Button
            android:id="@+id/another_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5.0dip"
            android:background="@color/blue"
            android:text="换一批" />
    </LinearLayout>

</LinearLayout>